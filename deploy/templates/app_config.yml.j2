branding:
  organization_name: "{{ branding_organization_name }}"
  app_name: "{{ branding_app_name }}"
  primary_color: "{{ branding_primary_color }}"
  secondary_color: "{{ branding_secondary_color }}"
  accent_color: "{{ branding_accent_color }}"
  neutral_color: "#F5F7F8"
  text_color: "#1F2933"
  meta_description: "{{ branding_app_name }} â€“ {{ branding_organization_name }}"
  logo:
    light: "{{ branding_logo_light }}"
    dark: "{{ branding_logo_dark }}"
    square: "{{ branding_logo_square }}"
  favicon: "{{ branding_favicon }}"
  footer_text: "{{ branding_footer_text }}"
  welcome_messages:
{% set welcome_messages = branding_welcome_messages | default(['Hallo! Ich bin dein AI-Assistent.']) %}
{% for message in welcome_messages %}
    - "{{ message }}"
{% endfor %}
  default_language: "de"

features:
  enable_dashboard: true
  enable_feedback: true
  enable_public_kb: true
  enable_metrics: true
  maintenance_mode: false

ai:
  provider: "{{ ai_provider }}"
  model: "{{ ai_model }}"
  temperature: {{ ai_temperature }}
  max_tokens: {{ ai_max_tokens }}
  streaming: {{ ai_streaming_string }}
  system_prompt: |
{{ (ai_system_prompt | default(default_system_prompt)) | indent(4) }}
  follow_up_prompt: |
{{ (ai_follow_up_prompt | default(default_follow_up_prompt)) | indent(4) }}

database:
  primary:
    type: "{{ database_type }}"
    url: "{{ database_url }}"
  vector:
    type: "{{ vector_db_type }}"
    url: null

storage:
  backups_path: "{{ storage_backups_path }}"
  uploads_path: "{{ storage_uploads_path }}"
  documents_path: "public/documents"
  images_path: "public/assets/images"
  upload_limit_mb: 10

contact:
  support_email: "support@{{ deployment_domain }}"
  imprint_url: "/impressum"
  privacy_url: "/datenschutz"

security:
  session_timeout_minutes: 1440
  session_max_duration_minutes: 43200
  rate_limit_window_minutes: 15
  rate_limit_requests: 100
  dashboard_rate_limit_requests: 500
  login_rate_limit_window_minutes: 60
  login_rate_limit_attempts: 6

deployment:
  domain: "{{ deployment_domain }}"
  https_enabled: true
  pm2_process_name: "{{ pm2_process_name }}"

integrations:
  analytics_provider: "plausible"
  analytics_script_url: "https://plausible.io/js/script.js"
  analytics_site_id: "{{ deployment_domain }}"

themes:
  chat_background_gradient:
    - "#0f172a"
    - "#1d4ed8"
    - "#22d3ee"
  dashboard_theme: "light"

documentation:
  swagger_enabled: true
  swagger_route: "/api/docs"
